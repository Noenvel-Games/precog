PRECOG_CFLAGS = -w -I/usr/include -O3 -I../usr/share/boost/1.84.0/ -I../src/console/precog/include/ -I../src/core/include/ -I../src/lua/5.4.4/src/core/include/ -DNDEBUG=1 -include ../src/core/include/eon/eon.h

rule CXX_PRECOG
  command = /usr/bin/clang++ $CXX_FLAGS $PRECOG_CFLAGS -Wc++20-extensions -stdlib=libstdc++ -std=c++20 -I/usr/include/aarch64-linux-gnu/c++/12 -I/usr/include/aarch64-linux-gnu -I/usr/include/c++/12 -lstdc++ -o $out -c $in
  description = Building C++ object $out

rule C_PRECOG
  command = gcc $PRECOG_CFLAGS -o $out -c $in
  description = Building C object $out

rule ELF_LINKER_PRECOG
  command = $PRE_LINK && clang++ -lstdc++ $in -o $TARGET_FILE $LINK_LIBRARIES && $POST_BUILD
  description = Compiling ELF binary $out
